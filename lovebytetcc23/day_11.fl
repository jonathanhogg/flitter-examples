
let d=..20 g=(.5+d)/20-.5 r=g*2+beat/2 p=g*1k
!window size=1080
    !canvas3d viewpoint=0;0;2k far=4k fov=1/8 rotate=beat/60
        !light position=0 color=.2M
        !material color=1
            for i in d
                let f=linear(noise(0,r[i],r,r)+.5)*50
                for j in d
                    for k in d
                        !box flat=1 position=p[i;j;k] size=f[j*20+k]
