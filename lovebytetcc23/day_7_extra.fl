
let t=beat/20 s=300
func f(f,d,r,l)
 for i in (1..5 if r)
  (!group translate=i*s/4;0 rotate=d scale=i/8) for d in (d;-d)
   f(f,d,r-1,l/2)
 !line points=0;12;s;6;s;-6;0;-12;0;10 fill=1
!window size=1080
 !canvas translate=540
  !gradient radius=s
   (!stop color=i<1;i<2;1) for i in ..3
  for i in ..6
   !group rotate=i/6+t
    f(f,sine(t)/6,2,1)
